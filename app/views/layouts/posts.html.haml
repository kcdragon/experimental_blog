- content_for :content do
  %section.rside
    .filterTitle By Year
    %ol.filter
      %li= link_to 'All', posts_path
      - @years.each do |year|
        %li= link_to year, posts_path(year: year)

    .filterTitle By Tags
    %ol.filter
      %li= link_to 'All', posts_path
      - @tags.each do |tag|
        %li= link_to tag, posts_path(tags: tag)

  %section.posts
    = yield

= render template: 'layouts/application'
