.filterTitle By Year
%ol.filter
  %li= link_to 'All', posts_path(clear_year: true), remote: true
  - years.each do |year|
    %li= link_to year, posts_path(year: year), remote: true

.filterTitle By Tags
%ol.filter
  %li= link_to 'All', posts_path(clear_tags: true), remote: true
  - tags.each do |tag|
    %li= link_to tag[0] + " (#{tag[1].to_i})", posts_path(tags: tag[0]), remote: true

#selectedTags
  - if selected_tags && selected_tags.count > 0
    .filterTitle Selected Tags
    %ol.filter
      - selected_tags.each do |tag|
        %li= tag
