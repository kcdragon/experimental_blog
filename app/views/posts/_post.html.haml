- is_short ||= false
%article.post
  %h3.title= link_to post.title, post_path(post)
  %p#subtitle
    %span.timestamp= post.date
    %p.content
      - if is_short
        -#= truncate(post.body_as_html, length: 500)
        = truncate_html(post.body_as_html, length: 500)
        = link_to 'Read more...', post_path(post)
      - else
        = post.body_as_html
    %p= post.tags_array.join(', ').chomp(', ')
